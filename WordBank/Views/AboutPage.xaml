<?xml version="1.0" encoding="utf-8"?>


<ContentPage x:Class="WordBank.Views.AboutPage" xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Title="About">
	<VerticalStackLayout Padding="16" HorizontalOptions="FillAndExpand" Spacing="4" VerticalOptions="Fill">
		<Label Text="Application info:" />
		<VerticalStackLayout Padding="0,0,0,8" BindableLayout.ItemsSource="{Binding AppInfoList}" HorizontalOptions="StartAndExpand" MaximumWidthRequest="300" Spacing="4">

			<BindableLayout.ItemTemplate>
				<DataTemplate>
					<Grid ColumnDefinitions="0.4*, 0.6*" ColumnSpacing="32">
						<Label Text="{Binding Name}" />
						<Label Grid.Column="1" Text="{Binding Value}" WidthRequest="192" />
					</Grid>
				</DataTemplate>
			</BindableLayout.ItemTemplate>
		</VerticalStackLayout>
		<Label Text="Device info:" />
		<VerticalStackLayout Padding="0,0,0,8" BindableLayout.ItemsSource="{Binding DeviceInfoList}" HorizontalOptions="StartAndExpand" MaximumWidthRequest="300" Spacing="4">

			<BindableLayout.ItemTemplate>
				<DataTemplate>
					<Grid ColumnDefinitions="0.4*, 0.6*" ColumnSpacing="32">
						<Label Text="{Binding Name}" />
						<Label Grid.Column="1" Text="{Binding Value}" WidthRequest="192" />
					</Grid>
				</DataTemplate>
			</BindableLayout.ItemTemplate>
		</VerticalStackLayout>
		<Label Text="This application (source code) generated by https://mauigen.net" />

	</VerticalStackLayout>

</ContentPage>